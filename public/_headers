# Cache control for versioned assets (with hash) - cache for 1 year
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# Cache control for index.html (short cache to pick up new versions)  
/
  Cache-Control: public, max-age=300, s-maxage=300

# Cache control for service worker (never cache)
/sw.js
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# Cache control for manifest (daily cache)
/manifest.webmanifest
  Cache-Control: public, max-age=86400

/ads.txt
  Cache-Control: no-cache, no-store, must-revalidate

/discord
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

